{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "./lib",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2018",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["./e2e/*", "./lib/*"],
  "include": ["./src/*"]
}
